.arrow:after{
  left:20px;
}
.contentWrap{
float: left;
margin-left: 10px;
}
.contentWrap text{
display: block;
}
.listWrap{
  position: relative;
}
.listWrap:after{
  content:" ";
display:inline-block;
height:6px;
width:6px;
border-width:2px 2px 0 0;
border-color:#c8c8cd;
border-style:solid;
-webkit-transform:matrix(0.71, 0.71, -.71, 0.71, 0, 0);
transform:matrix(0.71, 0.71, -.71, 0.71, 0, 0);
top:-2px;
position:absolute;
top:50%;
margin-top:-4px;
right:20px;

}